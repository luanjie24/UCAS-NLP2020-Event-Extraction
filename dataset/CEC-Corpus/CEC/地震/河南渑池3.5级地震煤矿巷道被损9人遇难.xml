	<eRelation relType="Causal" cause_eid="e3" effect_eid="e4"/>  
	<eRelation relType="Causal" cause_eid="e4" effect_eid="e6"/>  
	<eRelation relType="Causal" cause_eid="e4" effect_eid="e16"/>  
