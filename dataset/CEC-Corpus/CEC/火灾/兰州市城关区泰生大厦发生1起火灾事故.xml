<?xml version="1.0" encoding="UTF-8"?>

<Body>
	<Title>兰州市城关区泰生大厦发生1起火灾事故</Title>  
	<ReportTime type="absTime">2014年1月2日14时左右</ReportTime>  
	<Content>
		<Paragraph> 
			<Sentence> 
				<Event eid="e1"> 
					<Time tid="t1" type="absTime">2014年1月2日14时许</Time>， 
					<Location lid="l1">城关区泰生大厦第30层</Location>发生 
					<Denoter did="d1" type="emergency">火灾</Denoter>。
				</Event> 
			</Sentence>  
			<Sentence> 
				<Event eid="e2">事故发生后， 
					<Participant sid="s2,s3">市政府袁占亭市长、胥波副市长、咸大明副市长</Participant>第一时间 
					<Denoter type="movement" did="d2">赶赴</Denoter>  
					<Location type="destination" lid="l2">事故现场</Location>，
				</Event>  
				<Event eid="e3"> 
					<Denoter did="d3" type="operation">指导</Denoter>  
					<Object oid="o3">灭火救援工作</Object>。
				</Event> 
			</Sentence>  
			<Sentence> 
				<Event eid="e4"> 
					<Participant sid="s4">袁占亭市长</Participant>主持 
					<Denoter type="action" did="d4">召开</Denoter>了 
					<Object oid="o4">事故现场会</Object>，
				</Event>  
				<Event eid="e5"> 
					<Participant sid="s5">城关区政府主要领导及相关部门负责同志</Participant>  
					<Denoter did="d5" type="action">参加</Denoter>了 
					<Object oid="o5">会议</Object>。
				</Event> 
			</Sentence>  
			<Sentence> 
				<Event eid="e6"> 
					<Participant sid="s6">袁占亭市长</Participant>对本次火灾事故 
					<Denoter did="d6" type="operation">作了</Denoter>  
					<Object oid="o6">以下要求：</Object> 
				</Event>  
				<Event eid="e7">第一，及时 
					<Denoter type="operation" did="d7">疏散</Denoter>  
					<Participant oid="o7">楼内人员</Participant>，
				</Event>  
				<Event eid="e8"> 
					<Denoter type="operation" did="d8">确保</Denoter>  
					<Participant oid="o8">人员</Participant>  
					<Object oid="o8">安全</Object>；
				</Event>  
				<Event eid="e9">第二，立即对 
					<Object oid="o9">楼层内的辅助设施</Object>进行 
					<Denoter did="d9" type="operation">检查</Denoter>，
				</Event>  
				<Event eid="e10"> 
					<Denoter did="d10" type="operation">防止</Denoter>  
					<Object oid="o10">次生事故</Object>发生；
				</Event>  
				<Event eid="e11">第三， 
					<Participant sid="s11">市政府</Participant>  
					<Denoter did="d11" type="operation">成立</Denoter>  
					<Participant oid="o11">事故调查组</Participant>，
				</Event>  
				<Event eid="e12">依法依规开展 
					<Object oid="o12">事故</Object>  
					<Denoter did="d12" type="operation">调查</Denoter>，
				</Event>  
				<Event eid="e13">严肃 
					<Denoter did="d13" type="operation">追究</Denoter>  
					<Participant oid="o13">相关人员</Participant>  
					<Object oid="o13">责任</Object>；
				</Event>  
				<Event eid="e14">第四，尽快 
					<Denoter did="d14" type="operation">召开</Denoter>  
					<Object oid="o14">新闻发布会</Object>，
				</Event>  
				<Event eid="e15">及时向社会 
					<Denoter type="statement" did="d15">通报</Denoter>事故 
					<Object oid="o15">调查进展</Object>情况，
				</Event> 并做好信息报送工作； 
				<Event eid="e16">第五，立即在全市范围内 
					<Denoter did="d16" type="operation">开展</Denoter>  
					<Location lid="l16">人员密集场所和公共聚集场所</Location>的 
					<Object oid="o16">消防安全大检查</Object>，
				</Event>  
				<Event eid="e17"> 
					<Denoter did="d17" type="operation">排查</Denoter> 
				</Event>  
				<Event eid="e18"> 
					<Denoter did="d18" type="operation">整治</Denoter>  
					<Object oid="o17,o18">各类事故隐患</Object>，
				</Event>  
				<Event eid="e19"> 
					<Denoter did="d19" type="operation">确保</Denoter> 岁末年初的
					<Object oid="o19">安全稳定</Object>。
				</Event> 
			</Sentence> 
		</Paragraph>
	</Content>  
	<eRelation relType="Follow" bevent_eid="e1" aevent_eid="e2"/>  
	<eRelation relType="Composite" fevent_eid="e6" sevent_eids="e7-e19"/> 
</Body>
